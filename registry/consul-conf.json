{
  "data_dir": "/consul/data",
  "watches": [
    {
      "type": "service",
      "service": "DMS.SMS.v1.service.auth",
      "handler_type": "http",
      "http_handler_config": {
        "path": "http://DSM_SMS_api-gateway:80/events/types/consul-change",
        "header": { "type": ["service"] },
        "method": "POST",
        "timeout": "10s"
      }
    }, {
      "type": "checks",
      "service": "DMS.SMS.v1.service.auth",
      "handler_type": "http",
      "http_handler_config": {
        "path": "http://DSM_SMS_api-gateway:80/events/types/consul-change",
        "method": "POST",
        "header": { "type": ["checks"] },
        "timeout": "10s"
      }
    }
  ]
}
